{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent () }}
    <link href="{{ asset('css/register.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="register-container">
        <h1 class="register-title">S'inscrire</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.name, { 'label': "Nom d'utilisateur :" }) }}
            {{ form_row(registrationForm.email, { 'label': 'Adresse mail :' }) }}
            {{ form_row(registrationForm.delivery_address, { 'label': 'Adresse de livraison :' }) }}
            {{ form_row(registrationForm.plainPassword.first, { 'label': 'Mot de passe :' }) }}
            {{ form_row(registrationForm.plainPassword.second, { 'label': 'Confirmer le mot de passe :' })}}

            <button type="submit" class="btn">Créer un compte</button>
        {{ form_end(registrationForm) }}

        <p class="register-txt">Déjà inscrit ?</p>
        <button class="register-connect">
            <a class="register-link" href="{{ path('app_login') }}">Se connecter</a>
        </button>
    </div>
{% endblock %}
