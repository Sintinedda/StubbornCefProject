{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block stylesheets %}
    {{ parent () }}
    <link href="{{ asset('css/products.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/sweat-card.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body_id 'product-list' %}

{% block main %}

    <h1>Liste des produits</h1>

    
    <div class="row align-items-center text-center cards-container">
        <div class="col-sm-12 col-md-6 col-lg-4">
            {% include 'forms/sweats/_filter.html.twig' %}
        </div>

        {% for sweat_shirt in sweat_shirts %}
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="p-3 card-sweat">
                    <img class="card-sweat-img" src="{{ asset('/uploads/images/' ~ sweat_shirt.img) }}" alt="Sweat du moment"/>
                    <div class="card-sweat-body">
                        <div class="card-sweat-text">
                            <p class="card-sweat-name">{{ sweat_shirt.name }}</p>
                            <p class="card-sweat-price"><strong>Prix : </strong>{{ sweat_shirt.price }} €</p>
                        </div>
                            <a class="card-sweat-link" href="{{ path('app_sweat_show', { 'id': sweat_shirt.id }) }}">Voir</a>
                    </div>
                </div>
            </div>

        {% else %}
            <p>Aucun produit trouvé</p>
        {% endfor %}

    </div>

{% endblock %}
